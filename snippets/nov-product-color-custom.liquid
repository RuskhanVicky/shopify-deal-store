<style>
	{%- for i in (1..20) -%}
		{%- assign img_colorId = 'img_color' | append: i -%}
		{%- assign colorId = 'color' | append: i -%}
	  	{%- if settings.[img_colorId] != blank -%}
	  	.variant-color-{{ settings.[colorId] | downcase | handle }} {background-image: url("{{ settings.[img_colorId] | img_url: '70x' }}") !important}
	  	.variant-color .variant-color-{{ settings.[colorId] | downcase | handle }} {box-shadow: 0 0 0 1px #d0d0d0 inset}
	  	.item-swatch .variant-color-{{ settings.[colorId] | downcase | handle }}, .facet-color .variant-color-{{ settings.[colorId] | downcase | handle }} {border: 1px solid #d1d1d1 !important}
	  	{%- endif %}
	{%- endfor -%}
</style>