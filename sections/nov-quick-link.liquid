{% assign sst = section.settings %}
<div class="distance{% if sst.animate == true %} wow fadeInUp animated{% endif %}{% if sst.class != blank %} {{ sst.class }}{% endif %}">
  {% if sst.container == 'container' %}
    <div class="container">
  {% elsif sst.container == 'container-fluid' %}
    <div class="container-fluid">
  {% else %}
    <div class="container-full">
  {% endif %}
    {% if sst.heading != blank or sst.subheading != blank %}
      <div class="title_section d-flex align-items-center mb-25">
        {% if sst.heading != blank %}
          <span class="title" style="color: {{ sst.heading_c }};">{{ sst.heading }}</span>
        {% endif %}
        {% if sst.subheading != blank %}
          <span class="sub_title mt-0" style="color: {{ sst.subheading_c }};">{{ sst.subheading }}</span>
        {% endif %}
      </div>
    {% endif %}
    <div class="block-quicklink">
      {% for block in section.blocks %}
        <div class="quicklink-item{% unless forloop.last %} mb-10 mb-lg-15{% endunless %}">
          <span class="title font-900 text-uppercase d-block d-xl-inline-block">{{ block.settings.name }}</span>
          {%- assign linklist = block.settings.link -%}
          {% if linklists[linklist].links.size > 0 %}
            {% for link in linklists[linklist].links %}
              <a href="{{ link.url }}" class="hover:c_df">{{ link.title }}</a>
            {% endfor %}
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Vinova Quick Link",
    "class": "section-quick-link",
    "settings": [
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading",
        "default": "<p>Vinova Quick Link</p>"
      },
      {
        "type": "color",
        "id": "heading_c",
        "label": "Heading color",
        "default": "#222222"
      },
      {
        "type": "richtext",
        "id": "subheading",
        "label": "Sub heading",
        "default": "<p>Subtitle from happy customers</p>"
      },
      {
        "type": "color",
        "id": "subheading_c",
        "label": "Sub heading color",
        "default": "#666666"
      },
      {
        "type":  "header",
        "content": "Item style"
      },
      {
        "type": "color",
        "id": "c_t",
        "label": "Title color",
        "default": "#222222"
      },
      {
        "type": "color",
        "id": "c_l",
        "label": "Link color",
        "default": "#666666"
      },
      {
        "type":  "header",
        "content": "Design option"
      },
      {
        "type": "checkbox",
        "id": "animate",
        "label": "Show animated",
        "default":   true
      },
      {
        "type": "range",
        "id": "br_container",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Border radius container",
        "default": 0
      },
      {
        "type": "select",
        "id": "container",
        "label": "Container",
        "default": "container",
        "options": [
          { "value": "container", "label": "Container" },
          { "value": "container-fluid", "label": "Container fluid" },
          { "value": "container-full", "label": "Container full width" }
        ]
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background colors"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      },
      {
        "type": "select",
        "id": "bg_size",
        "label": "Background size",
        "default": "full",
        "options": [
          { "value": "content", "label": "Container" },
          { "value": "full", "label": "Full width" }
        ]
      },
      {
        "type": "text",
        "id": "class",
        "label": "Class"
      },
      {
        "type": "number",
        "id": "distance_top",
        "label": "Top spacing section (px)",
        "default": 30
      },
      {
        "type": "number",
        "id": "distance_bottom",
        "label": "Bottom spacing section (px)",
        "default": 30
      }
    ],
    "blocks": [
      {
        "type": "block",
        "name": "Block item",
        "settings": [
          {
            "type": "text",
            "id": "name",
            "label": "Title"
          },
          {
            "type": "link_list",
            "id": "link",
            "label": "Link",
            "default": "main-menu"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Vinova Quick Link",
        "category": "Text",
        "blocks": [
          {
            "type": "block",
            "settings": {
              "name": "Title one"
            }
          },
          {
            "type": "block",
            "settings": {
              "name": "Title two"
            }
          },
          {
            "type": "block",
            "settings": {
              "name": "Title three"
            }
          }
        ]
      }
    ]
  }
{% endschema %}

<style>
  {%- assign bg_image = section.settings.background_image -%}
  {%- if sst.bg_size == 'full' -%}
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top | append: 'px' }};
      padding-bottom: {{ sst.distance_bottom | append: 'px' }};
      border-radius: {{ sst.br_container | append: 'px' }};
      {% if sst.background_color != blank or bg_image != blank %}
        background: {{ sst.background_color }}{% if bg_image != blank %} url("{{ bg_image | img_url: '1920x' }}"){% endif %} no-repeat center;
        background-size: cover;
      {% endif %}
    }
    @media(max-width: 991px) {
      #shopify-section-{{ section.id }} .distance {
        {%- if sst.distance_top > 20 -%}padding-top: {{ sst.distance_top | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
        {%- if sst.distance_bottom > 20 -%}padding-bottom: {{ sst.distance_bottom | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
      }
    }
  {%- else -%}
    #shopify-section-{{ section.id }} .container-inner {
      padding-top: {{ sst.distance_top | append: 'px' }};
      padding-bottom: {{ sst.distance_bottom | append: 'px' }};
      border-radius: {{ sst.br_container | append: 'px' }};
      {% if sst.background_color != blank or bg_image.src != blank %}
        background: {{ sst.background_color }}{% if bg_image != blank %} url("{{ bg_image | img_url: '1920x' }}"){% endif %} no-repeat center;
        background-size: cover;
      {% endif %}
    }
    @media(max-width: 991px) {
      #shopify-section-{{ section.id }} .container-inner {
        {%- if sst.distance_top > 20 -%}padding-top: {{ sst.distance_top | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
        {%- if sst.distance_bottom > 20 -%}padding-bottom: {{ sst.distance_bottom | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
      }
    }
  {%- endif -%}
  {%- if sst.subheading_c != blank -%}
    #shopify-section-{{ section.id }} .title_section .title:after {
      background-color: {{ sst.subheading_c }};
    }
  {%- endif -%}
  #shopify-section-{{ section.id }} .quicklink-item .title {
    color: {{ sst.c_t }};
  }
  #shopify-section-{{ section.id }} .quicklink-item a {
    color: {{ sst.c_l }};
  }
  #shopify-section-{{ section.id }} .quicklink-item a:after {
    background-color: rgba({{ sst.c_l | color_to_rgb | remove: 'rgb(' | remove: 'rgba(' | remove: ')' | remove: ', 0.0' }}, 65%);
  }
</style>