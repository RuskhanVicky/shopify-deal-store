{% assign sst = section.settings %}
{%- assign xl = 100 | divided_by: sst.xl -%}
{%- assign lg = 100 | divided_by: sst.lg -%}
{%- assign md = 100 | divided_by: sst.md -%}
{%- assign sm = 100 | divided_by: sst.sm -%}
<div class="distance{% if sst.class != blank %} {{ sst.class }}{% endif %}{% if sst.animate == true %} wow fadeInUp animated{% endif %}">
  {% if sst.container == 'container' %}
    <div class="container">
  {% elsif sst.container == 'container-fluid' %}
    <div class="container-fluid">
  {% else %}
    <div class="container-full">
  {% endif %}
    <div class="container-inner overflow_hidden">
      {% if sst.container == 'container' %}
        <div class="container">
      {% else %}
        <div class="container-fluid">
      {% endif %}
        {% if sst.icon != blank or sst.heading != blank or sst.subheading != blank or sst.desc != blank %}
          {% assign blockTitle = true %}
        {% endif %}
        <div class="row align-items-center{% if blockTitle %} mb-40{% endif %}">
          <div class="ins-left position-relative {% if sst.desc != blank %}col-xl-9 col-md-8{% else %}col-12{% endif %}">
            <div class="title_section {{ sst.title_alignment }} mb-0">
              {% if sst.icon != blank %}
                <img data-src="{{ sst.icon | img_url: '55x' }}" class="lazyload mb-15">
              {% endif %}
              {% if sst.heading != blank %}
                <span class="title d-block" style="color: {{ sst.heading_c }};">{{ sst.heading }}</span>
              {% endif %}
              {% if sst.subheading != blank %}
                <span class="sub_title" style="color: {{ sst.subheading_c }};">{{ sst.subheading }}</span>
              {% endif %}
            </div>
          </div>
          {% if sst.desc != blank %}
            <div class="ins-right {% if sst.icon != blank or sst.heading != blank or sst.subheading != blank %}col-xl-3 col-md-4 mt-sm-20{% else %}col-12{% endif %}">
              <div class="desc text-md-left text-center" style="color: {{ sst.desc_c }};">{{ sst.desc }}</div>
            </div>
          {% endif %}
        </div>
      </div>
      <div class="nov-ins-block d-flex flex-nowrap">
        <div class="nov-ins-slider row spacing-{{ sst.spacing }} flex-nowrap">
          {% for block in section.blocks %}
            <div class="gallery--content p_item">
              <div class="card_gallery hover-image d-block overflow_hidden">
                <a href="{{ block.settings.image | img_url: '1200x' }}" class="d-block" data-fancybox="gallery">
                  {% if block.settings.image != blank %}
                    <img class="lazyload w-100" data-src="{{ block.settings.image | img_url: '600x600', crop: 'center' }}">
                    <i class="fa fa-instagram" aria-hidden="true"></i>
                  {% else %}
                  {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
                  {{ 'collection-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </a>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="nov-ins-slider row spacing-{{ sst.spacing }} flex-nowrap">
          {% for block in section.blocks %}
            <div class="gallery--content p_item">
              <div class="card_gallery hover-image d-block overflow_hidden">
                <a href="{{ block.settings.image | img_url: '1200x' }}" class="d-block" data-fancybox="gallery">
                  {% if block.settings.image != blank %}
                    <img class="lazyload w-100" data-src="{{ block.settings.image | img_url: '600x600', crop: 'center' }}">
                    <i class="fa fa-instagram" aria-hidden="true"></i>
                  {% else %}
                    {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
                    {{ 'collection-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </a>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Gallery Instagram",
  "class": "section-gallery-ins overflow_hidden",
  "settings":[
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon",
      "info": "40 x 40px recommended"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>Vinova Gallery Instagram</p>"
    },
    {
      "type": "color",
      "id": "heading_c",
      "label": "Heading color",
      "default": "#222222"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Sub heading",
      "default": "<p>Subtitle from happy customers</p>"
    },
    {
      "type": "color",
      "id": "subheading_c",
      "label": "Sub heading color",
      "default": "#666666"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Description",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>"
    },
    {
      "type": "color",
      "id": "desc_c",
      "label": "Description color",
      "default": "#666666"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Heading alignment",
      "default": "text-left",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ]
    },
    {
      "type":  "header",
      "content": "Slider option"
    },
    {
      "type": "range",
      "id": "time",
      "min": 5,
      "max": 60,
      "step": 1,
      "unit": "s",
      "label": "Slide run time",
      "default": 10
    },
    {
      "type": "checkbox",
      "id": "nav",
      "label": "Show nav",
      "default": true
    },
    {
      "type":  "header",
      "content": "Image item per row"
    },
    {
      "type": "range",
      "id": "xl",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Large desktop",
      "default": 6,
      "info": "Breakpoint 1200px ↑"
    },
    {
      "type": "range",
      "id": "lg",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Desktop",
      "default": 3,
      "info": "Breakpoint 992px ↑"
    },
    {
      "type": "range",
      "id": "md",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Tablet",
      "default": 3,
      "info": "Breakpoint 768px ↑"
    },
    {
      "type": "range",
      "id": "sm",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Large mobile",
      "default": 2,
      "info": "Breakpoint 576px ↑"
    },
    {
      "type": "range",
      "id": "spacing",
      "min": 0,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Spacing items",
      "default": 0
    },
    {
      "type": "header",
      "content": "Design options"
    },
    {
      "type": "checkbox",
      "id": "animate",
      "label": "Show animated",
      "default":   true
    },
    {
      "type": "select",
      "id": "container",
      "label": "Container",
      "default": "container",
      "options": [
        { "value": "container", "label": "Container" },
        { "value": "container-fluid", "label": "Container fluid" },
        { "value": "container-full", "label": "Container full width" }
      ]
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Border radius image",
      "default": 0
    },
    {
      "type": "range",
      "id": "br_container",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Border radius container",
      "default": 0
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background colors"
    },
    {
      "type": "select",
      "id": "bg_size",
      "label": "Background size",
      "default": "full",
      "options": [
        { "value": "content", "label": "Container" },
        { "value": "full", "label": "Full width" }
      ]
    },
    {
      "type": "text",
      "id": "class",
      "label": "Class"
    },
    {
      "type": "number",
      "id": "distance_top",
      "label": "Top spacing section (px)",
      "default": 30
    },
    {
      "type": "number",
      "id": "distance_bottom",
      "label": "Bottom spacing section (px)",
      "default": 30
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1200px recommended"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vinova Gallery Instagram",
      "category": "Image",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
<style>
  {% if sst.bg_size == 'full' %}
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top | append: 'px'}};
      padding-bottom: {{ sst.distance_bottom | append: 'px'}};
      border-radius: {{ sst.br_container | append: 'px' }};
      {% if sst.background_color != blank %}
        background-color: {{ sst.background_color }};
      {% endif %}
    }
  {% else %}
    #shopify-section-{{ section.id }} .container-inner {
      padding-top: {{ sst.distance_top | append: 'px'}};
      padding-bottom: {{ sst.distance_bottom | append: 'px'}};
      padding-left: 30px;
      padding-right: 30px;
      border-radius: {{ sst.br_container | append: 'px' }};
      {% if sst.background_color != blank %}
        background-color: {{ sst.background_color }};
      {% endif %}
    }
  {% endif %}
  #shopify-section-{{ section.id }} .gallery--content {
    width: 33.3333vw;
    flex: 0 0 33.3333vw;
  }
  @media(min-width:  576px) {
    #shopify-section-{{ section.id }} .gallery--content {
      width: {{ sm | append: 'vw' }};
      flex: 0 0 {{ sm | append: 'vw' }};
    }
  }
  @media(min-width:  768px) {
    #shopify-section-{{ section.id }} .gallery--content {
      width: {{ md | append: 'vw' }};
      flex: 0 0 {{ md | append: 'vw' }};
    }
  }
  @media(min-width:  992px) {
    #shopify-section-{{ section.id }} .gallery--content {
      width: {{ lg | append: 'vw' }};
      flex: 0 0 {{ lg | append: 'vw' }};
    }
  }
  @media(min-width:  1200px) {
    #shopify-section-{{ section.id }} .gallery--content {
      width: {{ xl | append: 'vw' }};
      flex: 0 0 {{ xl | append: 'vw' }};
    }
  }
  #shopify-section-{{ section.id }} .nov-ins-slider:first-child {
    margin-right: {{ sst.spacing | divided_by: 2 | append: 'px' }};
  }
  #shopify-section-{{ section.id }} .nov-ins-slider {
    animation-duration: {{ sst.time | append:  's' }};
  }
  #shopify-section-{{ section.id }} .card_gallery {
    border-radius: {{ sst.border_radius | append: 'px' }};
  }
</style>