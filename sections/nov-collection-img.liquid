{% assign sst = section.settings %}
{%- assign xxl = 100 | divided_by: sst.xxl -%}
{%- assign xl = 100 | divided_by: sst.xl -%}
{%- assign lg = 100 | divided_by: sst.lg -%}
{%- assign md = 100 | divided_by: sst.md -%}
{%- assign sm = 100 | divided_by: sst.sm -%}
{%- assign xs = 100 | divided_by: sst.xs -%}
<div class="distance{% if sst.class_section != blank %} {{ sst.class_section }}{% endif %}{% if sst.animate == true %} wow fadeInUp animated{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  {% if sst.container == 'container' %}
    <div class="container">
  {% elsif sst.container == 'container-fluid' %}
    <div class="container-fluid">
  {% else %}
    <div class="container-full">
  {% endif %} 
    <div class="container-inner position-relative">
      {% if sst.heading != blank or sst.subheading != blank %}
        <div class="title_section {{ sst.title_alignment }}">
          {% if sst.heading_c != blank %}<span class="title" style="color: {{ sst.heading_c }};">{{ sst.heading }}</span>{% endif %}
          {% if sst.subheading != blank %}
            <span class="sub_title" style="color: {{ sst.subheading_c }};">{{ sst.subheading }}</span>
          {% endif %}
        </div>
      {% endif %}
      <div class="nov-slick-carousel row{% if sst.show_dot %} pb-40{% endif %}{% if sst.show_border %} show_border spacing-0{% endif %}{% if sst.cus_size %} cus_size{% endif %}"
        data-autoplay="false"
        data-loop="false"
        data-nav="false"
        data-dots="{{ sst.show_dot }}" 
        data-items_xxl="{{ sst.xxl }}" 
        data-items="{{ sst.xl }}" 
        data-items_lg="{{ sst.lg }}" 
        data-items_md="{{ sst.md }}" 
        data-items_sm="{{ sst.sm }}"
        data-items_xs="{{ sst.xs }}"
        data-row="{{ sst.row_number }}"
        data-row_mobile="{{ sst.row_mobile }}">
        {% for block in section.blocks %}
        {% assign bst = block.settings %}
        <div class="block p_item">
          <div>
            <div class="item{% if bst.class != blank %} {{ bst.class }}{% endif %}">
              <div class="collec-img__item">
                <div class="collec-image{% if sst.cus_size %} overflow_hidden m-auto{% else %} nov-sh-image-2{% endif %}">
                  <a href="{{ bst.link }}"{% if sst.cus_size %} class="d-flex align-items-center justify-content-center w-100 h-100"{% endif %}>
                    {% if bst.image != blank %}
                      {% assign img_url = bst.image %}
                      <div class="respone_image" style="{% if sst.cus_size %}width: {{ sst.w_img }}px; height: {{ sst.h_img }}px;{% else %}padding-top:{{ 1 | divided_by: img_url.aspect_ratio | times: 100}}%{% endif %}">
                        <img class="lazyload"
                          src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1 1'%3E%3C/svg%3E"
                          data-src="{{ img_url | img_url: '180x' }}"
                          data-srcset="{{ img_url | img_url: '380x' }} 380w,{{ img_url | img_url: '580x' }} 580w,{{ img_url | img_url: '768x' }} 768w,{{ img_url | img_url: '900x' }} 900w,{{ img_url | img_url: '1080x' }} 1080w,{{ img_url | img_url: '1296x' }} 1296w,{{ img_url | img_url: '1512x' }} 1512w,{{ img_url | img_url: '1728x' }} 1728w, {{ img_url | img_url: '1024x' }} 2048w" data-sizes="auto" alt="{{ img_url.alt }}"{% if sst.cus_size %} style="object-fit: contain;"{% endif %}>
                      </div>
                    {% else %}
                      {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
                      {{ 'product-apparel-' | append: current | placeholder_svg_tag : 'placeholder-svg' }}
                    {% endif %}
                  </a>
                </div>
                <div class="collec-img__content {{ sst.block_alignment }}">
                  {% if bst.cta_label != blank %}
                    <div class="collec-img__text font-500 mt-15 hover:c_df">
                      <a href="{{ bst.link }}" class="hover:c_df">{{ bst.cta_label }}</a>
                    </div>
                  {% endif %}
                  {% if bst.desc != blank %}
                    <div class="collec-img__desc mt-15">{{ bst.desc }}</div>
                  {% endif %}
                  {% if bst.btn != blank %}
                    <a href="{{ bst.link }}" class="btn mt-20">{{ bst.btn }}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div><!-- End container -->
</div>
{% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
{% endif %}

