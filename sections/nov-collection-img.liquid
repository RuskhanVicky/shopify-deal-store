<style>
  #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
    width: {{ xs }}%;
    flex: 0 0 {{ xs }}%;
  }
  @media(min-width:  576px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ sm }}%;
      flex: 0 0 {{ sm }}%;
    }
  }
  @media(min-width:  768px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ md }}%;
      flex: 0 0 {{ md }}%;
    }
  }
  @media(min-width:  992px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ lg }}%;
      flex: 0 0 {{ lg }}%;
    }
  }
  @media(min-width:  1200px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ xl }}%;
      flex: 0 0 {{ xl }}%;
    }
  }
  @media(min-width:  1440px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ xxl }}%;
      flex: 0 0 {{ xxl }}%;
    }
  }
  {%- assign bg_image = sst.background_image -%}
  {% if sst.bg_size == 'full' %}
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top }}px;
      padding-bottom: {{ sst.distance_bottom }}px;
      border-radius: {{ sst.br_container | append: 'px' }};
      {% if sst.background_color != blank or bg_image != blank %}
        background: {{ sst.background_color }}{% if bg_image != blank %} url("{{ bg_image | img_url: '1920x' }}"){% endif %} no-repeat center;
        background-size: cover;
      {% endif %}
    }
    @media(max-width: 575px) {
      #shopify-section-{{ section.id }} .distance {
        {%- if sst.distance_top > 20 -%}padding-top: {{ sst.distance_top | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
        {%- if sst.distance_bottom > 20 -%}padding-bottom: {{ sst.distance_bottom | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
      }
    }
  {% else %}
    #shopify-section-{{ section.id }} .container-inner {
      padding-top: {{ sst.distance_top | append: 'px' }};
      padding-bottom: {{ sst.distance_bottom | append: 'px' }};
      border-radius: {{ sst.br_container | append: 'px' }};
      {% if sst.background_color != blank or bg_image.src != blank %}
        background: {{ sst.background_color }}{% if bg_image != blank %} url("{{ bg_image | img_url: '1920x' }}"){% endif %} no-repeat center;
        background-size: cover;
      {% endif %}
    }
    #shopify-section-{{ section.id }} .title_section {
      padding: 15px 30px;
      margin-bottom: 0;
    }
    @media(max-width: 575px) {
      #shopify-section-{{ section.id }} .container-inner {
        {%- if sst.distance_top > 20 -%}padding-top: {{ sst.distance_top | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
        {%- if sst.distance_bottom > 20 -%}padding-bottom: {{ sst.distance_bottom | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
      }
    }
  {% endif %}
  {% if sst.show_border -%}
    #shopify-section-{{ section.id }} .show_border,
    #shopify-section-{{ section.id }} .slick-slide .item {
      border-color:  {{ sst.c_border }};
    }
  {%- endif -%}
  #shopify-section-{{ section.id }} .collec-image {
    border-radius: {{ sst.border_radius | append: 'px' }};
    transform: translateZ(0);
    {% if sst.show_bg_img -%}
      background-color: {{ sst.bg_img }};
      width: {{ sst.w_bg_img | append: 'px' }};
      height: {{ sst.w_bg_img | append: 'px' }};
    {%- endif -%}
  }
  #shopify-section-{{ section.id }} .collec-img__text, #shopify-section-{{ section.id }} .collec-img__text a {
    font-size: {{ sst.t_s | divided_by: 10.0 | append: 'rem' }};
    color:  {{ sst.t_c }};
  }
  #shopify-section-{{ section.id }} .collec-img__desc {
    font-size: {{ sst.st_s | divided_by: 10.0 | append: 'rem' }};
    color:  {{ sst.st_c }};
  }
  #shopify-section-{{ section.id }} .btn {
    color: {{ sst.c_btn }};
    background-color: {{ sst.b_btn }};
    font-size: 12px;
  }
  #shopify-section-{{ section.id }} .btn:hover {
    color: {{ sst.c_btn_h }} !important;
    background-color: {{ sst.b_btn_h }} !important;
  }
</style>
