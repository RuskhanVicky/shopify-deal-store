      {
        "type": "checkbox",
        "id": "show_dot",
        "label": "Show dots",
        "default": false
      },
      {
        "type":  "header",
        "content": "Button Image"
      },
      {
        "type": "color",
        "id": "h_btn_c",
        "label": "Button color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "h_btn_ch",
        "label": "Button hover color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "h_btn_b",
        "label": "Button background",
        "default": "#444444"
      },
      {
        "type": "color",
        "id": "h_btn_bh",
        "label": "Button hover background",
        "default": "#222222"
      },
      {
        "type":  "header",
        "content": "Block product"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type":  "header",
        "content": "Product item per row"
      },
      {
        "type": "range",
        "id": "xl",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Large desktop",
        "default": 2,
        "info": "Breakpoint 1200px ↑"
      },
      {
        "type": "range",
        "id": "lg",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Desktop",
