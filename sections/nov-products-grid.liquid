{% assign sst = section.settings %}
{%- assign limit = sst.limit -%}
{%- assign collection = collections[sst.collection] -%}
{% if sst.xl == 5 %}
  {%- assign xl = 'col-xl-cus-5' -%}
{% else %}
  {%- assign xl = 12 | divided_by: sst.xl | prepend: 'col-xl-' -%}
{% endif %}
{% if sst.lg == 5 %}
  {%- assign lg = 'col-lg-cus-5' -%}
{% else %}
  {%- assign lg = 12 | divided_by: sst.lg | prepend: 'col-lg-' -%}
{% endif %}
{% if sst.md == 5 %}
  {%- assign md = 'col-md-cus-5' -%}
{% else %}
  {%- assign md = 12 | divided_by: sst.md | prepend: 'col-md-' -%}
{% endif %}
{% if sst.sm == 5 %}
  {%- assign sm = 'col-sm-cus-5' -%}
{% else %}
  {%- assign sm = 12 | divided_by: sst.sm | prepend: 'col-sm-' -%}
{% endif %}
{% if sst.xs == 5 %}
  {%- assign xs = 'col-xs-cus-5' -%}
{% else %}
  {%- assign xs = 12 | divided_by: sst.xs | prepend: 'col-' -%}
{% endif %}
<div class="distance position-relative{% if sst.class != blank %} {{ sst.class }}{% endif %}{% if sst.animate == true %} wow fadeInUp animated{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  {% if sst.container == 'container' %}
    <div class="container">
  {% elsif sst.container == 'container-fluid' %}
    <div class="container-fluid">
  {% else %}
    <div class="container-full" style="padding: 0 {{ sst.spacing | append: 'px' }}">
  {% endif %}
    {% if section.blocks.size == 0 %}
      {% if sst.heading != blank or sst.subheading != blank %}
        <div class="title_section {{ sst.title_alignment }}">
          {% if sst.heading != blank %}
            <span class="title" style="color: {{ sst.heading_c }};">{{ sst.heading }}</span>
          {% endif %}
          {% if sst.subheading != blank %}
            <span class="sub_title" style="color: {{ sst.subheading_c }};">{{ sst.subheading }}</span>
          {% endif %}
        </div>
      {% endif %}
    {% endif %}
    {% if section.blocks.size > 0 %}
      <div class="row{% if sst.bn_p == 'right' %} flex-md-row-reverse{% endif %}">
        <div class="col-lg-6 mb-md-30 position-relative">
          {% if sst.heading != blank or sst.subheading != blank %}
            <div class="title_section {{ sst.title_alignment }} mb-65">
              {% if sst.heading != blank %}
                <span class="title" style="color: {{ sst.heading_c }};">{{ sst.heading }}</span>
              {% endif %}
              {% if sst.subheading != blank %}
                <span class="sub_title{% if sst.heading != blank %} mt-20{% endif %}" style="color: {{ sst.subheading_c }};">{{ sst.subheading }}</span>
              {% endif %}
            </div>
          {% endif %}
          <div class="nov-slick-carousel nov-dot-style" data-items="1" data-autoplay="{{ sst.autoplay }}" data-autoplaytimeout="{{ sst.autoplay_speed }}" data-dots="{{ sst.show_dot }}" data-nav="false" data-focus="false" data-hover="false" data-row="1">
            {% for block in section.blocks %}
              <div class="item position-relative">
                {% assign img_url = block.settings.img %}
                {% if img_url != blank %}
                  <div class="respone_image h-100 nov-sh-image-2" style="padding-top:{{ 1 | divided_by: img_url.aspect_ratio | times: 100}}%;">
                    <img class="lazyload h-100"
                    src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1 1'%3E%3C/svg%3E"
                    data-src="{{ img_url | img_url: '180x' }}"
                    data-srcset="{{ img_url | img_url: '180x' }} 180w,{{ img_url | img_url: '380x' }} 380w,{{ img_url | img_url: '580x' }} 580w,{{ img_url | img_url: '768x' }} 768w,{{ img_url | img_url: '900x' }} 900w,{{ img_url | img_url: '1080x' }} 1080w,{{ img_url | img_url: '1170x' }} 1200w,{{ img_url | img_url: '1512x' }} 1512w,{{ img_url | img_url: '1728x' }} 1728w, {{ img_url | img_url: '2048x' }} 2048w" data-sizes="auto" alt="{{ img_url.alt }}" style="object-fit: cover">
                  </div>
                {% else %}
                  {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
                  {{ 'collection-apparel-' | append: current | placeholder_svg_tag : 'placeholder-svg' }}
                {% endif %}
                {% if block.settings.btn != blank %}
                  <a href="{{ block.settings.btn_l }}" class="btn-img btn position-absolute bottom-center{% if sst.show_dot == true %} mb-70{% endif %}">
                    {{ block.settings.btn }}
                  </a>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
        <div class="col-lg-6">
    {% endif %}
    
    <div class="grid--view-items row spacing-{{ sst.spacing }} spacing-xs-15">
      {% for product in collection.products limit: limit %}
        {% if sectionId == blank %}
          {% assign sectionId = section.id %}
        {% endif %}
        <div class="item {{ xl }} {{ lg }} {{ md }} {{ sm }} {{ xs }}">
          {% render 'product-grid-item-style-1', product: product, sectionId: sectionId %}
        </div>
      {% else %}
        {%- for i in (1..6) -%}
          <div class="item {{ xl }} {{ lg }} {{ md }} {{ sm }} {{ xs }} mb-30">
            {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
            {{ 'product-apparel-' | append: current | placeholder_svg_tag : 'placeholder-svg' }}
          </div>
        {%- endfor -%}
      {% endfor %}
    </div>
    {% if section.blocks.size > 0 %}
        </div>
      </div>
    {% endif %}
  </div>
</div>
{% schema %}
