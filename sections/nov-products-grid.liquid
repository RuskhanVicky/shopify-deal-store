      },
      {
        "type":  "header",
        "content": "Block Image"
      },
      {
        "type": "select",
        "id": "bn_p",
        "label": "Image position",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
