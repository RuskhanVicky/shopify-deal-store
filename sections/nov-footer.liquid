{% assign sst = section.settings %}
<footer{% if sst.animate == true %} class="wow fadeInUp animated"{% endif %} data-section-id="{{ section.id }}" data-section-type="nov-slick">
  {% if section.blocks.size > 0 %}
    <div class="container">
      <div class="footer-layout{% if template.name != 'index' %} pt-95{% endif %} pb-80 pb-xs-40">
        <div class="row">
          {% for block in section.blocks %}
            {% assign bst = block.settings %}
            {% if block.type == 'block_contact' %}
              <div class="footer_contact block_footer{% if bst.block_title != blank and sst.mobile_acc %} mt-xs-0 mb-xs-0{% endif %} {{ bst.grid_xl }} {{ bst.grid_lg }} {{ bst.grid_md }} {{ bst.grid_sm }}{% if bst.block_class != blank %} {{ bst.block_class }}{% endif %}">
                <div class="block h-100">
                  {% if bst.block_title != blank %}
                  <div class="title-block position-relative">
                    {{ bst.block_title }}
                    {% if sst.mobile_acc %}
                      <span class="f_btn_sl d-sm-none"><i class="zmdi zmdi-plus"></i></span>
                    {% endif %}
                  </div>
                  {% endif %}
                  <div class="block-content{% if bst.block_title != blank and sst.mobile_acc %} h_t{% endif %}">
                    <div class="pb-xs-30">
                      {% if bst.block_subtitle != blank %}
                        <div class="footer-subtitle">{{ bst.block_subtitle }}</div>
                      {% endif %}
                      {% if bst.phone != blank %}
                        <div class="footertop-item__contact d-flex align-items-center">
                          {% if bst.img_phone != blank %}
                            <div class="footertop-item__icon">
                              <img data-src="{{ bst.img_phone | img_url: '50x' }}" class="lazyload">
                            </div>
                          {% endif %}
                            <span class="phone font-700">{{ bst.phone }}</span>
                        </div>
                      {% endif %}
                      {% if bst.email != blank %}
                        <div class="footertop-item__contact d-flex align-items-center">
                          {% if bst.img_email != blank %}
                            <div class="footertop-item__icon">
                              <img data-src="{{ bst.img_email | img_url: '50x' }}" class="lazyload">
                            </div>
                          {% endif %}
                            <span>{{ bst.email }}</span>
                        </div>
                      {% endif %}
                      {% if bst.open != blank %}
                        <div class="footertop-item__contact d-flex align-items-center">
                          {% if bst.img_open != blank %}
                            <div class="footertop-item__icon">
                              <img data-src="{{ bst.img_open | img_url: '50x' }}" class="lazyload">
                            </div>
                          {% endif %}
                            <span>{{ bst.open }}</span>
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            {% endif %}

            {% if block.type == 'block_menu' %}
              {%- assign footer_linklist = bst.menu_handle -%}
              <div class="footer_menu block_footer{% if bst.block_title != blank and sst.mobile_acc %} mt-xs-0 mb-xs-0{% endif %} {{ bst.grid_xl }} {{ bst.grid_lg }} {{ bst.grid_md }} {{ bst.grid_sm }}{% if bst.block_class != blank %} {{ bst.block_class }}{% endif %}">
                <div class="block h-100">
                  {% if bst.block_title != blank %}
                    <div class="title-block">
                      {{ bst.block_title }}
                      {% if sst.mobile_acc %}
                        <span class="f_btn_sl d-sm-none"><i class="zmdi zmdi-plus"></i></span>
                      {% endif %}
                    </div>
                  {% endif %}
                  <div class="block-content{% if bst.block_title != blank and sst.mobile_acc %} h_t{% endif %}">
                    {% if linklists[footer_linklist].links.size > 0 %}
                      <ul class="site-footer__linklist list-unstyled pb-xs-30">
                        {% for link in linklists[footer_linklist].links %}
                          <li class="site-footer__linklist-item">
                            <a href="{{ link.url }}">{{ link.title }}</a>
                          </li>
                        {% endfor %}
