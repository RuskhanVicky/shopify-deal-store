        "id": "heading_c",
        "label": "Heading color",
        "default": "#222222"
      },
      {
        "type": "richtext",
        "id": "subheading",
        "label": "Sub heading",
        "default": "<p>Subtitle from happy customers</p>"
      },
      {
        "type": "color",
        "id": "subheading_c",
        "label": "Sub heading color",
        "default": "#666666"
      },
      {
        "type": "color",
        "id": "bg_heading",
        "label": "Background heading"
      },
      {
        "type": "checkbox",
        "id": "show_border",
        "label": "Show border bottom"
      },
      {
        "type": "checkbox",
        "id": "viewall",
        "label": "Show view all"
      },
      {
        "type": "color",
        "id": "c_viewall",
        "label": "View all color"
      },
      {
        "type":  "header",
        "content": "Sub element"
      },
      {
        "type": "select",
        "id": "show_el",
        "label": "Show sub element",
        "default": "none",
        "options": [
          { "value": "none", "label": "None" },
