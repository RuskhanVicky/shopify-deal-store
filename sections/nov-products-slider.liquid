      {
        "type": "select",
        "id": "el_p",
        "label": "Sub element position",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          },
          {
            "value": "top",
            "label": "Top"
          }
        ]
      },
      {
        "type":  "header",
        "content": "Banner element"
      },
      {
        "type": "image_picker",
        "id": "banner",
        "label": "Banner"
      },
      {
        "type": "text",
        "id": "bn_t",
        "label": "Banner title"
      },
      {
        "type": "inline_richtext",
        "id": "bn_st",
        "label": "Banner sub title"
      },
      {
        "type": "text",
        "id": "bn_btn",
        "label": "Banner button text"
      },
      {
        "type": "url",
        "id": "bn_l",
        "label": "Banner link"
      },
      {
        "type":  "header",
        "content": "List collection element"
      },
      {
        "type": "color",
        "id": "c_collect",
        "label": "Text color"
      },
      {
        "type": "color",
        "id": "c_collecth",
        "label": "Text color hover"
      },
      {
        "type": "color",
        "id": "bg_collect",
        "label": "Background color"
      },
      {
        "type": "color",
        "id": "bg_collecth",
        "label": "Background color hover"
      },
      {
        "type":  "header",
        "content": "Block product"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "checkbox",
        "id": "show_border_item",
        "label": "Show border item",
        "default": true
      },
      {
        "type": "color",
        "id": "c_border_item",
        "label": "Border color"
      },
      {
        "type":  "header",
        "content": "Product item per row"
      },
      {
        "type": "range",
        "id": "xxl",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Extra desktop",
        "default": 4,
        "info": "Breakpoint 1440px ↑"
      },
      {
        "type": "range",
        "id": "xl",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Large desktop",
        "default": 4,
        "info": "Breakpoint 1200px ↑"
      },
      {
        "type": "range",
        "id": "lg",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Desktop",
        "default": 4,
        "info": "Breakpoint 992px ↑"
      },
      {
        "type": "range",
        "id": "md",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Tablet",
        "default": 3,
        "info": "Breakpoint 768px ↑"
      },
      {
        "type": "range",
        "id": "sm",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Large mobile",
        "default": 2,
        "info": "Breakpoint 576px ↑"
      },
      {
        "type": "range",
        "id": "xs",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Mobile",
        "default": 2,
        "info": "Breakpoint 575px ↓"
      },
      {
        "type": "range",
        "id": "limit",
        "min": 4,
        "max": 30,
        "step": 1,
        "label": "Limit",
        "default": 30,
        "info": "Select number limit products"
      },
      {
        "type": "range",
        "id": "spacing",
        "min": 0,
        "max": 30,
        "step": 5,
        "unit": "px",
        "label": "Spacing",
        "default": 30,
        "info": "Spacing item"
      },
      {
        "type":  "header",
        "content": "Slider options"
      },
      {
        "type": "range",
        "id": "row_number",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Number row",
        "default": 1
      },
      {
        "type": "range",
        "id": "row_mobile",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Number row mobile",
        "default": 1
      },
      {
        "type": "checkbox",
        "id": "show_nav",
        "label": "Show navigation",
        "default": false
      },
      {
        "type":  "header",
        "content": "Design option"
      },
      {
        "type": "checkbox",
        "id": "animate",
        "label": "Show animated",
        "default": true
      },
      {
        "type": "range",
        "id": "br_container",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Border radius container",
        "default": 0
      },
      {
        "type": "select",
        "id": "container",
        "label": "Container",
        "default": "container",
        "options": [
          { "value": "container", "label": "Container" },
          { "value": "container-fluid", "label": "Container fluid" },
          { "value": "container-full", "label": "Container full width" }
        ]
      },
      {
        "type": "color",
        "id": "c_border",
        "label": "Border color"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background colors"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      },
      {
        "type": "select",
        "id": "bg_size",
        "label": "Background size",
        "default": "full",
        "options": [
          { "value": "content", "label": "Container" },
          { "value": "full", "label": "Full width" }
        ]
      },
      {
        "type": "text",
        "id": "class",
        "label": "Class"
      },
      {
        "type": "number",
        "id": "distance_top",
        "label": "Top spacing section (px)",
        "default": 30
      },
      {
        "type": "number",
        "id": "distance_bottom",
        "label": "Bottom spacing section (px)",
        "default": 30
      }
    ],
    "blocks": [
      {
        "type": "link",
        "name": "Link Item",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Vinova Products Slider",
        "category": "Collection"
      }
    ]
  }
{% endschema %}
{%- assign bg_image = sst.background_image -%}
<style>
  #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
    width: {{ xs }}%;
    flex: 0 0 {{ xs }}%;
  }
  @media(min-width:  576px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ sm }}%;
      flex: 0 0 {{ sm }}%;
    }
  }
  @media(min-width:  768px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ md }}%;
      flex: 0 0 {{ md }}%;
    }
  }
  @media(min-width:  992px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ lg }}%;
      flex: 0 0 {{ lg }}%;
    }
  }
  @media(min-width:  1200px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ xl }}%;
      flex: 0 0 {{ xl }}%;
    }
  }
  @media(min-width:  1440px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ xxl }}%;
      flex: 0 0 {{ xxl }}%;
    }
  }
  {% if sst.bg_size == 'full' %}
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top | append: 'px' }};
      padding-bottom: {{ sst.distance_bottom | append: 'px' }};
      border-radius: {{ sst.br_container | append: 'px' }};
      {% if sst.background_color != blank or bg_image != blank %}
        background: {{ sst.background_color }}{% if bg_image != blank %} url("{{ bg_image | img_url: '1920x' }}"){% endif %} no-repeat center;
        background-size: cover;
      {% endif %}
    }
    @media(max-width: 991px) {
      #shopify-section-{{ section.id }} .distance {
        {%- if sst.distance_top > 20 -%}padding-top: {{ sst.distance_top | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
        {%- if sst.distance_bottom > 20 -%}padding-bottom: {{ sst.distance_bottom | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
      }
    }
  {% else %}
    #shopify-section-{{ section.id }} .container-inner {
      padding-top: {{ sst.distance_top | append: 'px' }};
      padding-bottom: {{ sst.distance_bottom | append: 'px' }};
      border-radius: {{ sst.br_container | append: 'px' }};
      {% if sst.background_color != blank or bg_image.src != blank %}
        background: {{ sst.background_color }}{% if bg_image != blank %} url("{{ bg_image | img_url: '1920x' }}"){% endif %} no-repeat center;
        background-size: cover;
      {% endif %}
    }
    @media(max-width: 991px) {
      #shopify-section-{{ section.id }} .container-inner {
        {%- if sst.distance_top > 20 -%}padding-top: {{ sst.distance_top | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
        {%- if sst.distance_bottom > 20 -%}padding-bottom: {{ sst.distance_bottom | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
      }
    }
  {% endif %}
  #shopify-section-{{ section.id }} .btn-viewall {
    color:  {{ sst.c_viewall }};
  }
  {%- if sst.bg_heading != 'rgba(0,0,0,0)' and sst.bg_heading != blank -%}
    #shopify-section-{{ section.id }} .block-top .title_section, #shopify-section-{{ section.id }} .block-top .title_section:before {
      background-color: {{ sst.bg_heading }};
    }
    #shopify-section-{{ section.id }} .block-viewall i, #shopify-section-{{ section.id }} .btn-viewall:hover {
      color:  {{ sst.bg_heading }};
    }
  {%- else -%}
    #shopify-section-{{ section.id }} .block-viewall i, #shopify-section-{{ section.id }} .btn-viewall:hover {
      color:  var(--theme-color-default);
    }
  {%- endif -%}
  {%- if sst.show_border -%}
    #shopify-section-{{ section.id }} .block-top {
      border-bottom: 1px solid {{ sst.c_border }};
    }
    #shopify-section-{{ section.id }} .nov-block__collec-list a {
      border-color:  {{ sst.c_border }};
    }
    #shopify-section-{{ section.id }} .nov-block__collec-flex {
      border-bottom:  1px solid {{ sst.c_border }};
    }
  {%- endif -%}
  {%- if sst.show_border_item -%}
    #shopify-section-{{ section.id }} .show-border .p_item,
    #shopify-section-{{ section.id }} .block-product__slider.collection-border,
    #shopify-section-{{ section.id }} .block-product__slider.border-bottom {
      border-color: {{ sst.c_border_item }};
    }
  {%- endif -%}
  {%- if sst.show_el == 'collection' -%}
    {%- if sst.c_collect != blank -%}
      #shopify-section-{{ section.id }} .el-collection a {
        color: {{ sst.c_collect }};
        background-color: {{ sst.bg_collect }};
      }
    {%- endif -%}
    @media(min-width:  768px) {
      #shopify-section-{{ section.id }} .nov-block__collec-flex {
        padding:  10px 30px;
      }
    }
    {%- if sst.c_collect != blank -%}
      #shopify-section-{{ section.id }} .el-collection a:hover {
        color:  {{ sst.c_collecth }};
        background-color: {{ sst.bg_collecth }};
      }
    {%- endif -%}
  {%- endif -%}
</style>