{% assign sst = section.settings %}
{%- assign xxl = 100 | divided_by: sst.xxl -%}
{%- assign xl = 100 | divided_by: sst.xl -%}
{%- assign lg = 100 | divided_by: sst.lg -%}
{%- assign md = 100 | divided_by: sst.md -%}
{%- assign sm = 100 | divided_by: sst.sm -%}
{%- assign xs = 100 | divided_by: sst.xs -%}
{%- assign collection = collections[sst.collection] -%}
{%- assign product_limit = sst.limit -%}
<div class="distance position-relative{% if sst.style == 'style2' and sst.banner == blank %} style2{% endif %}{% if sst.class != blank %} {{ sst.class }}{% endif %}{% if sst.animate == true %} wow fadeInUp animated{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  {% if sst.container == 'container' %}
    <div class="container">
  {% elsif sst.container == 'container-fluid' %}
    <div class="container-fluid">
  {% else %}
    <div class="container-full" style="padding: 0 {{ sst.spacing | append: 'px' }}">
  {% endif %}
    <div class="container-inner position-relative overflow_hidden">
      <div class="block-top d-flex align-items-center justify-content-between">
        {% if sst.heading != blank or sst.subheading != blank %}
          <div class="title_section">
            {% if sst.heading != blank %}
              <span class="title" style="color: {{ sst.heading_c }};">{{ sst.heading }}</span>
            {% endif %}
            {% if sst.subheading != blank %}
              <span class="sub_title" style="color: {{ sst.subheading_c }};">{{ sst.subheading }}</span>
            {% endif %}
          </div>
        {% endif %}
        {% if sst.viewall %}
          <div class="block-viewall d-flex align-items-center">
            <i class="rbb-icon-menu-11"></i>
            <a href="{{ collection.url }}" class="btn-viewall text-uppercase font-700">{{ 'sections.product_slider.view_all_collection' | t }}</a>
          </div>
        {% endif %}
      </div>
      {% if sst.show_el != 'none' %}
        <div class="{% if  sst.el_p == 'top' %}sub-element__top{% else %}sub__element__abreast d-md-flex align-items-start{% endif %}{% if sst.el_p == 'right' %} flex-md-row-reverse{% endif %} position-relative">
          <div class="block-sub__element position-relative">
            {% if sst.show_el == 'banner' %}
              <div class="ps_bn-cotent nov-sh-image-2 h-100">
                {% assign img_url = sst.banner %}
                <a href="{{ sst.bn_l }}">
                  <div class="respone_image h-100 nov-sh-image-2" style="padding-top:{{ 1 | divided_by: img_url.aspect_ratio | times: 100}}%;">
                    <img class="lazyload h-100"
                    src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1 1'%3E%3C/svg%3E"
                    data-src="{{ img_url | img_url: '180x' }}"
                    data-srcset="{{ img_url | img_url: '180x' }} 180w,{{ img_url | img_url: '380x' }} 380w,{{ img_url | img_url: '580x' }} 580w,{{ img_url | img_url: '768x' }} 768w,{{ img_url | img_url: '900x' }} 900w,{{ img_url | img_url: '1080x' }} 1080w,{{ img_url | img_url: '1170x' }} 1200w,{{ img_url | img_url: '1512x' }} 1512w,{{ img_url | img_url: '1728x' }} 1728w, {{ img_url | img_url: '2048x' }} 2048w" data-sizes="auto" alt="{{ img_url.alt }}" style="object-fit: cover">
                  </div>
                </a>
                {% if sst.bn_t != blank or sst.bn_st != blank or sst.bn_btn != blank %}
                  <div class="title_section mb-0 bn-block__content position-absolute text-center">
                    {% if sst.bn_t != blank %}<span class="title white">{{ sst.bn_t }}</span>{% endif %}
                    {% if sst.bn_st != blank %}<div class="sub_title white mt-20">{{ sst.bn_st }}</div>{% endif %}
                    {% if sst.bn_btn != blank %}<a href="{{ sst.bn_l }}" class="bn-title btn mt-25">{{ sst.bn_btn }}</a>{% endif %}
                  </div>
                {% endif %}
              </div>
            {% endif %}
            {% if sst.show_el == 'collection' %}
              <div class="el-collection {% if sst.el_p != 'top' %}nov-block__collec-list{% else %}nov-block__collec-flex{% endif %}">
                <div class="btn-toggle font-800 text-uppercase d-md-none d-flex align-items-center justify-content-between" btn-toggle data-toggle="CollecProSlider">
                  <span>{{ 'sections.product_slider.category' | t }}</span>
                  <i class="zmdi zmdi-chevron-down"></i>
                </div>
                <ul class="list-unstyled p-0 block-toggle" nov-toggle="CollecProSlider">
                  {% for block in section.blocks %}
                    <li><a href="{{ block.settings.link }}" class="font-700 d-block">{{ block.settings.title }}</a></li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}
          </div>
          <div class="block-product__slider{% if sst.show_border_item %} border-bottom{% endif %}{% if sst.show_el == 'collection' %} collection-border {{ sst.el_p }}{% endif %}">
      {% endif %}
      {% comment %} product slider {% endcomment %}
      <div class="grid--view-items nov-slick-carousel row spacing-{{ sst.spacing }}{% if sst.show_border_item %} show-border{% endif %}"
        data-autoplay="false" 
        data-autoplayTimeout="6000" 
        data-loop="false"
        data-dots="false"
        data-nav="{{ sst.show_nav }}"
        data-row="{{ sst.row_number }}"
        data-row_mobile="{{ sst.row_mobile }}"
        data-items_xxl="{{ sst.xxl }}"
        data-items="{{ sst.xl }}"
        data-items_lg="{{ sst.lg }}"
        data-items_md="{{ sst.md }}"
        data-items_sm="{{ sst.sm }}"
        data-items_xs="{{ sst.xs }}"
        data-adaptiveheight="true">
        {% for product in collection.products limit: product_limit %}
          {% if sectionId == blank %}
            {% assign sectionId = section.id %}
          {% endif %}
          <div class="block">
            <div>
              <div class="item p_item col">
                {% render 'product-grid-item-style-1', product: product, sectionId: sectionId %}
              </div>
            </div>
          </div>
        {% else %}
          {%- for i in (1..6) -%}
            <div class="item p_item mb-30">
              {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
              {{ 'product-apparel-' | append: current | placeholder_svg_tag : 'placeholder-svg' }}
            </div>
          {%- endfor -%}
        {% endfor %}
      </div>
      {% comment %} end product slider {% endcomment %}
      {% if sst.show_el != 'none' %}
         </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
