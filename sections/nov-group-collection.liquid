{%- assign sst = section.settings -%}
{% if sst.xl == 5 %}
  {%- assign xl = 'col-xl-cus-5' -%}
{% else %}
  {%- assign xl = 12 | divided_by: sst.xl | prepend: 'col-xl-' -%}
{% endif %}
{% if sst.lg == 5 %}
  {%- assign lg = 'col-lg-cus-5' -%}
{% else %}
  {%- assign lg = 12 | divided_by: sst.lg | prepend: 'col-lg-' -%}
{% endif %}
{% if sst.md == 5 %}
  {%- assign md = 'col-md-cus-5' -%}
{% else %}
