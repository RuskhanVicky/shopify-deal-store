{% endif %}
{% if sst.sm == 5 %}
  {%- assign sm = 'col-sm-cus-5' -%}
{% else %}
  {%- assign sm = 12 | divided_by: sst.sm | prepend: 'col-sm-' -%}
{% endif %}
{% if sst.xs == 5 %}
  {%- assign xs = 'col-xs-cus-5' -%}
{% else %}
  {%- assign xs = 12 | divided_by: sst.xs | prepend: 'col-' -%}
{% endif %}
<div class="distance{% if sst.class != blank %} {{ sst.class }}{% endif %}{% if sst.animate == true %} wow fadeInUp animated{% endif %}">
  {% if sst.container == 'container' %}
    <div class="container">
  {% elsif sst.container == 'container-fluid' %}
    <div class="container-fluid">
  {% else %}
    <div class="container-full">
  {% endif %} 
    {% if sst.heading != blank %}
      <div class="title_section {{ sst.title_alignment }}">
        <div><span class="title" style="color: {{ sst.heading_c }};">{{ sst.heading }}</span></div>
        {% if sst.subheading != blank %}
          <span class="sub_title" style="color: {{ sst.subheading_c }};">{{ sst.subheading }}</span>
        {% endif %}
      </div>
    {% endif %}
    <div class="row spacing-{{ sst.spacing_group }}">
      {% for block in section.blocks %}
        {%- assign bst = block.settings -%}
        <div class="{{ xl }} {{ lg }} {{ md }} {{ sm }} col-12{% if bst.class_group_image != blank %} {{ bst.class_group_image }}{% endif %}">
          {% if bst.xl == 5 %}
            {%- assign ixl = 'col-xl-cus-5' -%}
          {% else %}
            {%- assign ixl = 12 | divided_by: bst.xl | prepend: 'col-xl-' -%}
          {% endif %}
          {% if bst.lg == 5 %}
            {%- assign ilg = 'col-lg-cus-5' -%}
          {% else %}
            {%- assign ilg = 12 | divided_by: bst.lg | prepend: 'col-lg-' -%}
          {% endif %}
          {% if bst.md == 5 %}
            {%- assign imd = 'col-md-cus-5' -%}
          {% else %}
            {%- assign imd = 12 | divided_by: bst.md | prepend: 'col-md-' -%}
          {% endif %}
          {% if bst.sm == 5 %}
            {%- assign ism = 'col-sm-cus-5' -%}
          {% else %}
            {%- assign ism = 12 | divided_by: bst.sm | prepend: 'col-sm-' -%}
          {% endif %}
          {% if bst.xs == 5 %}
            {%- assign ixs = 'col-xs-cus-5' -%}
          {% else %}
            {%- assign ixs = 12 | divided_by: bst.xs | prepend: 'col-' -%}
          {% endif %}
          <div class="block-item">
            {% if bst.heading != blank or bst.viewall == true %}
              <div class="block-top d-flex align-items-center justify-content-between mb-25">
                {% if bst.title != blank %}
                  <div class="block-heading font-700 f_pr">{{ bst.title }}</div>
                {% endif %}
                {% if bst.viewall == true %}
                  <a href="{{ bst.viewall_link }}" class="btn-viewall d-flex align-items-center text-uppercase font-700"><i class="rbb-icon-menu-11 c_df"></i><span class="hover:c_df">{{ 'sections.group_collection.view_all' | t }}</span></a>
                {% endif %}
              </div>
            {% endif %}
            <div class="row spacing-{{ sst.spacing }} spacing-sm-10">
              {%- for i in (1..4) -%}
                {%- assign itemId = 'item' | append: i -%}
                {%- assign imageId = 'image_' | append: i -%}
                {%- assign classId = 'class_' | append: i -%}
                {%- assign linkId = 'link_' | append: i -%}
                {%- assign titleId = 'title_' | append: i -%}
                {% if bst[itemId] %}
                  <div class="{{ ixl }} {{ ilg }} {{ imd }} {{ ism }} {{ ixs }}{% if bst[classId] != blank %} {{ bst[classId] }}{% endif %}">
                    <div class="gallery-image__item nov-sh-image-2">
                      {% if bst[linkId] != blank %}
                        <a class="w-100" href="{{ bst[linkId] }}">
                      {% endif %}
                      {% if bst[imageId] != blank %}
                        {%- render 'nov-aspect-image', image: bst[imageId], aspect: sst.aspect -%}
                      {% else %}
                        {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
                        {{ 'collection-apparel-' | append: current | placeholder_svg_tag : 'placeholder-svg' }}
                      {% endif %}
                      {% if bst[linkId] != blank%}
                        </a>
                      {% endif %}
                      {% if bst[titleId] != blank %}
                        <{% if bst[linkId] != blank%}a href="{{ bst[linkId] }}"{% else %}div{% endif %} class="text">{{ bst[titleId] }}{% if bst[linkId] != blank%}</a>{% else %}</div>{% endif %}
                      {% endif %}
                    </div>
                  </div>
                {% endif %}
              {%- endfor -%}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
